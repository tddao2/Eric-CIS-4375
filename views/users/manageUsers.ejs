<% layout('layouts/boilerplate')%>
    <div class="row justify-content-center my-5">
        <h1 class="text-white text-center">MANAGE USERS</h1>
        <div class="col-auto">
            <div class="row">
                <div class="col-6">
                    <input class="form-control mt-2" type="text" name="" id="myInput" placeholder="Search Employee"
                        onkeyup="search()">
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered my-4 table-responsive">
                <thead>
                    <tr class>
                        <th class="text-center bg-warning text-white h6">Username</th>
                        <th class="text-center bg-warning text-white h6">Email</th>
                        <th class="text-center bg-warning text-white h6">Role</th>
                        <th class="text-center bg-warning text-white h6">Status</th>
                        <th class="text-center bg-warning text-white h6">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let result of results) { %>
                        <tr>

                            <td class="text-center bg-dark text-white h6">
                                <%= result.username %>
                            </td>
                            <td class="text-center bg-dark text-white h6">
                                <%= result.email %>
                            </td>
                            <td class="text-center bg-dark text-white h6">
                                
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-person-fill icon-green" viewBox="0 0 16 16">
                                    <path
                                        d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </td>
                            <td class="text-center bg-dark text-white">
                                <% if (result.active==1) {%>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                        class="bi bi-check-circle icon-green" viewBox="0 0 16 16">
                                        <path
                                            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path
                                            d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                                    </svg>
                                    <% } else if (result.active==0) {%>


                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                            fill="currentColor" class="bi bi-exclamation-circle icon-yellow"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path
                                                d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
                                        </svg>


                                        <% } %>
                            </td>

                            <td>
                                <a href="/manageUsers/activate/<%= result.userId%>" class="activate">Activate </a>

                                <a href="/manageUsers/deactivate/<%= result.userId%>" class="deactivate"
                                    onclick="return confirm('Do you want to delete?')">Deactivate </a>

                                <a href="/manageUsers/delete/<%= result.userId %>" class="delete"
                                    onclick="return confirm('Do you want to delete?')">Delete </a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>